/**index.wxss - 首页样式（更新版，添加手动输入功能）**/

page {
  background-color: #F5F5F5;
}

.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 顶部区域 */
.top-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
}

.logo-icon {
  width: 64rpx;
  height: 64rpx;
}

.text-title {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
}

/* 主操作区 */
.card {
  background-color: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 81, 0.15);
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-btn {
  width: 640rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 81, 0.15);
  transition: all 0.3s ease;
}

.action-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.action-btn-primary {
  background: linear-gradient(135deg, #00A651 0%, #00985A 100%);
  box-shadow: 0 8rpx 24rpx rgba(0, 166, 81, 0.2);
}

.action-btn-primary:active {
  opacity: 0.85;
}

.icon-large {
  font-size: 128rpx;
  line-height: 1;
}

.text-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  text-align: center;
}

.text-small {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
  margin-bottom: 8rpx;
}

.text-muted {
  font-size: 24rpx;
  color: #cccccc;
}

.divider {
  text-align: center;
  color: #cccccc;
  font-size: 24rpx;
  margin: 24rpx 0;
  padding: 0 32rpx;
}

/* 手动输入区域 */
.input-section {
  margin: 32rpx 0;
  padding: 32rpx;
  background: #F9FAFB;
  border-radius: 24rpx;
  border: 2rpx solid #E0E0E0;
}

.input-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
  text-align: center;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  margin-bottom: 32rpx;
}

.input {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  border: 2rpx solid #E0E0E0;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: #333333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #0078D7;
  box-shadow: 0 0 0 8rpx rgba(0, 120, 81, 0.1);
}

.input-placeholder {
  color: #cccccc;
}

.clear-btn {
  position: absolute;
  top: 50%;
  right: 16rpx;
  transform: translateY(-50%);
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  color: #999999;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.clear-btn:active {
  background: #e0e0e0;
}

.input-actions {
  display: flex;
  justify-content: center;
}

.btn-full {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
  border: none;
  border-radius: 24rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.btn-full:active {
  opacity: 0.9;
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 120, 81, 0.2);
}

.btn-text {
  font-size: 32rpx;
}

/* 底部：历史记录 */
.history-section {
  margin-top: 32rpx;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.view-all-btn {
  font-size: 28rpx;
  color: #0078D7;
}

/* 历史记录卡片 */
.history-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.history-card:active {
  background: #F9FAFB;
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.batch-code {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Mono', 'Courier New', monospace;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.status-badge.warning {
  background: #FF5252;
}

.status-badge.success {
  background: #52C41A;
}

.status-badge.info {
  background: #999999;
}

.time-ago {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

.product-name {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666666;
}

/* 空状态 */
.empty-state {
  padding: 64rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 24rpx 64rpx;
  background: linear-gradient(135deg, #00A651 0%, #00985A 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(0, 166, 81, 0.15);
}

.empty-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 安全区域 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
