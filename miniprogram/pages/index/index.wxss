/**index.wxss**/
page {
  background-color: #F5F5F5;
}

.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 顶部区域 */
.top-bar {
  padding: 32rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo-icon {
  width: 64rpx;
  height: 64rpx;
}

/* 主操作区 */
.main-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.action-btn {
  width: 640rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 81, 0.15);
}

.action-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.action-btn-primary {
  background-color: #00A651;
}

.action-btn-secondary {
  background-color: #ffffff;
  border: 2rpx solid #e0e0e0;
}

.icon-large {
  font-size: 128rpx;
  line-height: 1;
}

.text-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  text-align: center;
}

.text-small {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.divider {
  text-align: center;
  color: #cccccc;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  padding: 0 32rpx;
}

/* 底部：历史记录 */
.history-section {
  margin-top: 32rpx;
  padding: 32rpx;
  background-color: #ffffff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.view-all-btn {
  font-size: 28rpx;
  color: #0078D7;
}

/* 历史记录卡片 */
.history-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #f0f0f0;
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.batch-code {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.status-warning {
  background-color: #FF5252;
}

.status-success {
  background-color: #52C41A;
}

.status-info {
  background-color: #999999;
}

.time-ago {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
}

.product-name {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666666;
}

/* 空状态 */
.empty-state {
  padding: 64rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background-color: #00A651;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: bold;
}
