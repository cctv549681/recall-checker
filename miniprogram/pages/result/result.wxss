/**result.wxss - 查询结果页面样式**/

page {
  background-color: #F5F5F5;
  height: 100vh;
}

.container {
  padding: 32rpx;
}

/* 顶部区域 */
.top-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
}

.back-btn {
  padding: 16rpx 32rpx;
}

.back-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
}

.title {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

/* 状态卡片 */
.status-card {
  margin: 32rpx 0;
  padding: 48rpx 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.status-card.recalled {
  background: linear-gradient(135deg, #FF5252 0%, #E84334 100%);
}

.status-card.not_recalled {
  background: linear-gradient(135deg, #52C41A 0%, #3CA066 100%);
}

.status-card.expired {
  background: linear-gradient(135deg, #52C41A 0%, #3CA066 100%);
}

.status-card.not_found {
  background: #999999;
}

.status-header {
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.status-icon {
  font-size: 96rpx;
  color: #ffffff;
  line-height: 1;
}

.status-title {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 16rpx;
}

/* 风险等级 */
.risk-level {
  margin: 32rpx 0;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.risk-label {
  color: #ffffff;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.risk-badge {
  padding: 8rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.risk-badge.high {
  background: #FF0000;
}

.risk-badge.medium {
  background: #FF8C00;
}

.risk-badge.low {
  background: #00A651;
}

/* 产品详情卡片 */
.card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 32rpx;
  text-align: left;
}

.detail-item {
  margin-bottom: 24rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.detail-value {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.batch-code {
  font-weight: bold;
  color: #0078D7;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Mono', 'Courier New', monospace;
}

/* 召回原因 */
.recall-reason {
  margin: 32rpx 0;
  padding: 32rpx;
  background: #FFF0F0;
  border-radius: 24rpx;
  border-left: 8rpx solid #FF5252;
}

.reason-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.reason-icon {
  font-size: 48rpx;
  color: #FF5252;
  margin-right: 16rpx;
}

.reason-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF5252;
}

.reason-content {
  color: #333333;
  font-size: 28rpx;
  line-height: 1.6;
}

.reason-detail {
  color: #666666;
  font-size: 24rpx;
  margin-top: 16rpx;
}

/* 底部操作 */
.bottom-actions {
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 32rpx;
  background: #ffffff;
  border-radius: 24rpx;
  border: 2rpx solid #e0e0e0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-btn:active {
  opacity: 0.8;
  background: #f9f9f9;
}

.action-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.loading-spinner {
  width: 96rpx;
  height: 96rpx;
  border: 8rpx solid #00A651;
  border-top: 8rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  position: absolute;
  top: 120%;
  left: 50%;
  transform: translateX(-50%);
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
  white-space: nowrap;
}

/* 未找到状态 */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
}

.empty-btn {
  padding: 24rpx 48rpx;
  background: #00A651;
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.empty-btn:active {
  opacity: 0.8;
}

/* 安全区域 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
