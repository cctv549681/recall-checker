/* result.wxss - 查询结果页面样式（重构版）*/

page {
  background-color: #F8F9FB;
  min-height: 100vh;
}

.container {
  padding: 32rpx;
  padding-top: 120rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
  min-height: 100vh;
  box-sizing: border-box;
}

/* ==================== 顶部导航栏 ==================== */
.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
  z-index: 100;
}

.back-btn {
  padding: 8rpx;
  margin-right: 16rpx;
}

.back-icon {
  color: #ffffff;
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1;
}

.title {
  flex: 1;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  padding-right: 48rpx; /* 平衡左侧返回按钮 */
}

/* ==================== 状态卡片 ==================== */
.status-card {
  margin-bottom: 32rpx;
  padding: 64rpx 32rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  text-align: center;
}

.status-card.recalled {
  background: linear-gradient(135deg, #FF5252 0%, #D32F2F 100%);
}

.status-card.not_recalled {
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
}

.status-card.not_found {
  background: linear-gradient(135deg, #999999 0%, #666666 100%);
}

.status-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-icon {
  font-size: 128rpx;
  color: #ffffff;
  line-height: 1;
  margin-bottom: 24rpx;
}

.status-title {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

/* 风险等级 */
.risk-level {
  margin-top: 32rpx;
  padding: 24rpx 48rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  display: inline-flex;
  align-items: center;
}

.risk-label {
  color: rgba(255, 255, 255, 0.95);
  font-size: 28rpx;
  font-weight: 500;
  margin-right: 16rpx;
}

.risk-badge {
  padding: 8rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #ffffff;
}

.risk-badge.high {
  background: #FF0000;
  box-shadow: 0 2rpx 8rpx rgba(255, 0, 0, 0.3);
}

.risk-badge.medium {
  background: #FF8C00;
  box-shadow: 0 2rpx 8rpx rgba(255, 140, 0, 0.3);
}

.risk-badge.low {
  background: #52C41A;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3);
}

/* ==================== 产品详情卡片 ==================== */
.card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.detail-item {
  margin-bottom: 32rpx;
}

.detail-label {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.detail-value {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
  line-height: 1.4;
}

.batch-code {
  font-weight: 700;
  color: #0078D7;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Mono', 'Courier New', monospace;
  font-size: 36rpx;
  letter-spacing: 1rpx;
}

/* ==================== 召回原因 ==================== */
.recall-reason {
  background: linear-gradient(135deg, #FFF5F5 0%, #FFEAEA 100%);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #FF5252;
  box-shadow: 0 2rpx 12rpx rgba(255, 82, 82, 0.1);
}

.reason-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.reason-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.reason-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF5252;
}

.reason-content {
  color: #333333;
  font-size: 28rpx;
  line-height: 1.6;
}

.reason-detail {
  color: #666666;
  font-size: 26rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 82, 82, 0.1);
}

/* ==================== 底部操作栏 ==================== */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 24rpx);
  background: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  gap: 16rpx;
  z-index: 99;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn-primary {
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 120, 215, 0.3);
}

.action-btn-secondary {
  background: #F8F9FB;
  color: #333333;
  border: 2rpx solid #E0E0E0;
}

.action-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.action-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: rgba(248, 249, 251, 0.95);
  z-index: 1000;
}

.loading-spinner {
  width: 96rpx;
  height: 96rpx;
  border: 8rpx solid #E0E0E0;
  border-top-color: #0078D7;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

/* ==================== 空状态 ==================== */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  display: block;
}

.empty-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #999999;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  color: #CCCCCC;
  margin-bottom: 48rpx;
  display: block;
}

.empty-btn {
  width: 320rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
  color: #ffffff;
  border: none;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 215, 0.3);
}

.empty-btn:active {
  transform: scale(0.98);
}

/* ==================== 安全区域 ==================== */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* ==================== 过渡动画 ==================== */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
