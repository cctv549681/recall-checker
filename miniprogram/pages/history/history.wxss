/* history.wxss - 历史记录页面样式（重构版）*/

page {
  background-color: #F8F9FB;
  min-height: 100vh;
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* ==================== 导航栏 ==================== */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
  z-index: 100;
}

.back-btn {
  padding: 8rpx;
}

.back-icon {
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1;
}

.navbar-title {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  padding-right: 48rpx; /* 平衡右侧清空按钮 */
}

.clear-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  font-size: 28rpx;
}

/* ==================== 筛选标签栏 ==================== */
.filter-tabs {
  position: sticky;
  top: 88rpx;
  z-index: 99;
  display: flex;
  padding: 0 32rpx;
  padding-top: 24rpx;
  padding-bottom: 16rpx;
  background: #F8F9FB;
}

.tab-item {
  position: relative;
  padding: 16rpx 24rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
  border-radius: 16rpx;
  background: #FFFFFF;
  border: 2rpx solid #E0E0E0;
  transition: all 0.3s ease;
}

.tab-item:active {
  opacity: 0.8;
}

.tab-item.active {
  color: #0078D7;
  background: rgba(0, 120, 215, 0.08);
  border-color: #0078D7;
  font-weight: 600;
}

/* ==================== 统计信息 ==================== */
.stats-bar {
  padding: 16rpx 32rpx;
  padding-top: 8rpx;
}

.stats-text {
  font-size: 24rpx;
  color: #999999;
}

/* ==================== 历史记录列表 ==================== */
.history-scroll {
  flex: 1;
  height: calc(100vh - 240rpx);
  padding: 0 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 32rpx);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.history-item:active {
  transform: scale(0.99);
  background: #FAFAFA;
}

/* 左侧区域 */
.item-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.batch-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.batch-code {
  font-family: -apple-system, BlinkMacSystemFont, 'SF Mono', 'Courier New', monospace;
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  letter-spacing: 1rpx;
}

.status-badge {
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #FFFFFF;
  white-space: nowrap;
}

.status-badge.status-safe {
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
}

.status-badge.status-danger {
  background: linear-gradient(135deg, #FF5252 0%, #D32F2F 100%);
}

.status-badge.status-unknown {
  background: linear-gradient(135deg, #999999 0%, #666666 100%);
}

.time-text {
  font-size: 24rpx;
  color: #999999;
}

/* 右侧区域 */
.item-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-left: 24rpx;
  border-left: 1rpx solid #F0F0F0;
}

.product-text {
  font-size: 26rpx;
  color: #666666;
  max-width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.arrow-icon {
  font-size: 28rpx;
  color: #CCCCCC;
  font-weight: bold;
}

/* ==================== 空状态 ==================== */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
}

.empty-action-btn {
  width: 320rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
  border: none;
  border-radius: 24rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(0, 120, 215, 0.3);
}

.empty-action-btn:active {
  transform: scale(0.98);
}

/* ==================== 弹窗 ==================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-dialog {
  position: relative;
  width: 600rpx;
  z-index: 1001;
}

.modal-content {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
}

.modal-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  display: block;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16rpx;
  display: block;
}

.modal-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 48rpx;
  display: block;
  line-height: 1.5;
}

.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  border: none;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.modal-btn:active {
  transform: scale(0.98);
}

.modal-btn-secondary {
  background: #F8F9FB;
  color: #333333;
  border: 2rpx solid #E0E0E0;
}

.modal-btn-danger {
  background: linear-gradient(135deg, #FF5252 0%, #D32F2F 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(255, 82, 82, 0.3);
}

/* ==================== 安全区域 ==================== */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

/* ==================== 过渡动画 ==================== */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(100rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
