/**history.wxss - 历史记录页面样式**/

page {
  background-color: #F5F5F5;
  height: 100vh;
}

.container {
  padding: 32rpx;
}

/* 顶部区域 */
.top-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #0078D7 0%, #005FA3 100%);
}

.back-btn {
  padding: 16rpx 32rpx;
}

.back-icon {
  color: #ffffff;
  font-size: 48rpx;
  font-weight: bold;
}

.title {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.clear-btn {
  display: flex;
  align-items: center;
}

.clear-icon {
  font-size: 32rpx;
  color: #ffffff;
  margin-right: 12rpx;
}

.clear-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: center;
  padding: 24rpx 0;
  background: #ffffff;
  margin-bottom: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.filter-btn {
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #666666;
  background: #ffffff;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s ease;
}

.filter-btn:active {
  opacity: 0.7;
}

.filter-btn.active {
  color: #0078D7;
  border-color: #0078D7;
  background: rgba(0, 120, 81, 0.1);
}

.filter-text {
  font-weight: 500;
}

/* 历史记录卡片 */
.history-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.history-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.history-left {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.batch-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
}

.batch-code {
  font-family: -apple-system, BlinkMacSystemFont, 'SF Mono', 'Courier New', monospace;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  letter-spacing: 2rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
}

.status-badge.querying {
  background-color: #999999;
}

.status-badge.recalled {
  background-color: #FF5252;
}

.status-badge.not_recalled {
  background-color: #52C41A;
}

.status-badge.expired {
  background-color: #52C41A;
}

.time-ago {
  font-size: 24rpx;
  color: #999999;
}

.history-right {
  display: flex;
  align-items: center;
}

.product-name {
  font-size: 28rpx;
  color: #666666;
  text-align: right;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action-icon {
  font-size: 48rpx;
  color: #999999;
}

/* 空状态 */
.empty-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
}

.empty-icon {
  font-size: 128rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
}

.empty-actions {
  margin-top: 24rpx;
}

.empty-btn {
  padding: 32rpx 64rpx;
  background: linear-gradient(135deg, #0078D7 0%, #00A651 100%);
  border-radius: 32rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.empty-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 底部spacer */
.bottom-spacer {
  height: 180rpx;
}

/* 清空确认弹窗 */
.modal-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 101;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx;
  z-index: 102;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999999;
  font-size: 48rpx;
}

.modal-body {
  margin-bottom: 32rpx;
  text-align: center;
}

.modal-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.modal-text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.modal-desc {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 32rpx;
}

.modal-actions {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.btn:active {
  opacity: 0.8;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333333;
}

.btn-danger {
  background: linear-gradient(135deg, #FF5252 0%, #E84334 100%);
  color: #ffffff;
}

.btn-text {
  font-size: 28rpx;
}

/* 安全区域 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
