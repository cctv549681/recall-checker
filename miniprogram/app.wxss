/**app.wxss**/
page {
  background-color: #F5F5F5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5;
}

.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 主色调 - 雀巢主题 */
.color-primary {
  color: #0078D7;
}

.bg-primary {
  background-color: #0078D7;
}

.color-success {
  color: #52C41A;
}

.bg-success {
  background-color: #52C41A;
}

.color-warning {
  color: #FF5252;
}

.bg-warning {
  background-color: #FF5252;
}

.color-info {
  color: #999999;
}

/* 按钮样式 */
.btn-primary {
  background-color: #00A651;
  color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 120, 81, 0.15);
  border: none;
}

.btn-primary:active {
  opacity: 0.95;
  transform: scale(0.98);
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #333333;
  border-radius: 16rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
}

.btn-secondary:active {
  opacity: 0.8;
}

/* 卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.card-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 输入框样式 */
.input {
  background-color: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.input:focus {
  border-color: #00A651;
}

.input-placeholder {
  color: #999999;
}

/* 文本样式 */
.text-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  margin-bottom: 48rpx;
}

.text-subtitle {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 32rpx;
}

.text-body {
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.text-small {
  font-size: 24rpx;
  color: #999999;
}

.text-muted {
  font-size: 24rpx;
  color: #cccccc;
}

/* 图标大小 */
.icon-large {
  font-size: 128rpx;
}

.icon-medium {
  font-size: 96rpx;
}

.icon-small {
  font-size: 64rpx;
}

/* 间距 */
.mt-16 {
  margin-top: 16rpx;
}

.mt-24 {
  margin-top: 24rpx;
}

.mt-32 {
  margin-top: 32rpx;
}

.mb-16 {
  margin-bottom: 16rpx;
}

.mb-24 {
  margin-bottom: 24rpx;
}

.mb-32 {
  margin-bottom: 32rpx;
}

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Flex 权重 */
.flex-1 {
  flex: 1;
}

/* 文本对齐 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 状态标签 */
.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.status-badge.warning {
  background-color: #FF5252;
  color: #ffffff;
}

.status-badge.success {
  background-color: #52C41A;
  color: #ffffff;
}

.status-badge.info {
  background-color: #999999;
  color: #ffffff;
}

/* 加载动画 */
.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #00A651;
  border-top: 4rpx solid transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

/* 过渡动画 */
.transition {
  transition: all 0.3s ease;
}

/* 安全区域 */
.safe-area-top {
  padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}
